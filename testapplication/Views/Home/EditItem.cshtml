@model Item

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h5 class="modal-title ">ویرایش</h5>
</div>

<form asp-controller="Home" asp-action="EditItem"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">عنوان</label>
                    <input id="Title_table" type="text" class="form-control" value="@Model.Title" asp-for="Title" autofocus="" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Title" class="error"></span>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer text-center">
        <button type="button" class="btn btn-default waves-effect mx-2" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-warning waves-effect waves-light" id="sa_edit"  >ویرایش</button>
    </div>

</form>