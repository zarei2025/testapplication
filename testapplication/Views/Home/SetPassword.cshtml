@model User
@{
    ViewData["Title"] = "ایجاد کلمه عبور";
}
@if (!string.IsNullOrWhiteSpace(ViewBag.user_empty_error))
{
    <div class="alert-danger p-3 m-3">
        <p>@ViewBag.user_empty_error</p>
    </div>
}

<section class="contact-section px-3 py-5 p-md-5">
    <div class="container">
        <form class="contact-form col-lg-5 mx-lg-auto " asp-controller="Home" asp-action="SetPassword">
            <div class="form-group col-12 m-2 required">
                <label class="control-label" asp-for="Password">کلمه عبور جدید:</label>
                <input type="text" class="form-control" placeholder="" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-12 m-2 required">
                <label class="control-label" asp-for="RepeatPassword">تکرار کلمه عبور جدید:</label>
                <input type="text" class="form-control" placeholder="" asp-for="RepeatPassword">
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>

            <div class="form-group col-12 m-2">
                <button type="submit" class="btn btn-success btn-lg btn-block">ذخیره</button>
            </div>

        </form>
    </div>
</section>